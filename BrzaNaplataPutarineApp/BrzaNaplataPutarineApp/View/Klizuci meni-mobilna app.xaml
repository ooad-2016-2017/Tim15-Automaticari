<Page
    x:Class="BrzaNaplataPutarineApp.View.Klizuci_meni_mobilna_app"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BrzaNaplataPutarineApp.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
 <Grid.RowDefinitions>
 <RowDefinition Height="Auto" />
 <RowDefinition Height="*" />
 </Grid.RowDefinitions>
 <RelativePanel>
 <Button Name="PrikaziMeni" FontFamily="Segoe MDL2 Assets" Content="&#xE700;" Click="PrikaziMeni_Click" />
 </RelativePanel>
 <SplitView Name="MojSplitView"
 Grid.Row="1"
 DisplayMode="CompactOverlay"
 OpenPaneLength="4*"
 CompactPaneLength="*"
 HorizontalAlignment="Left">
 <SplitView.Pane>
 <ListView
 x:Name="MeniStavkeListView"
 Grid.Row="1"
 ItemContainerTransitions="{x:Null}"
 ItemTemplate="{StaticResource MeniStavkeItemTemplate}"
 IsItemClickEnabled="True"
 SelectionChanged="MeniStavkeListView_SelectionChanged">
 <ListView.ItemContainerStyle>
 <Style TargetType="ListViewItem">
 <Setter Property="HorizontalContentAlignment" Value="Stretch" />
 </Style>
 </ListView.ItemContainerStyle>
                   
                </ListView>

 </SplitView.Pane>
 <SplitView.Content>
 <Frame x:Name="sadrzajPodstranice"/>
 </SplitView.Content>
 </SplitView>
 </Grid>
</Page>
