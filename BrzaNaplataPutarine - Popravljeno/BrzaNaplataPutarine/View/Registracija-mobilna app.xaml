<Page
    x:Class="BrzaNaplataPutarine.View.Registracija_mobilna_app"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BrzaNaplataPutarine.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="95*"/>
            <RowDefinition Height="155*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="51,0,0,0" TextWrapping="Wrap" Text="Registracija novog korisnika" VerticalAlignment="Top" Width="254" TextAlignment="Center" FontSize="20" Height="27"/>
        <Button x:Name="button" Content="Fizicko lice" HorizontalAlignment="Left" Margin="96,92.333,0,0" Grid.Row="1" VerticalAlignment="Top" Height="76" Width="182" FontSize="20"/>
        <Button x:Name="button_Copy" Content="Pravno lice" HorizontalAlignment="Left" Margin="96,61.667,0,0" Grid.Row="2" VerticalAlignment="Top" Height="84" Width="182" FontSize="20"/>
    </Grid>
</Page>
